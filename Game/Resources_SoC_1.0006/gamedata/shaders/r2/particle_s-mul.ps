#include "common.h"

struct 	v2p
{
 	float2 	tc0	: 	TEXCOORD0;	// base
	half4	c	:	COLOR0;		// diffuse
};


//////////////////////////////////////////////////////////////////////////////////////////
// Pixel
half4 	main	( v2p I )	: COLOR
{
	// color = 0 	-> color=0
	// color = 1	-> color=c
	half4	c 	= I.c*tex2D	(s_base,I.tc0);
	return	half4(c.xyz,1);
}
