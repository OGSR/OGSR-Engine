[options]
;Игнорируемые расширения файлов. Из самого компрессора все вынес сюда, в конфиг. Для большей настраиваемости.
exclude_exts = *.~*,*._*,*.scc,*.vssscc,*.smf,*.uvm,*.prj,*.log,*.avi,*.tga,*.swatch,*.db,*.key,*.raw,*.bak,*.lnk,*.game
;Игнор мусорных файлов от компиляторов уровней ( игнорируются все файлы с именем "build" ), можно прописать ещё какие-то.
exclude_files = build.*

;Здесь ничего менять не надо
[include_folders]
ai = true
anims = true
config = true
levels = true
meshes = true
scripts = true
shaders = true
sounds = true
spawns = true
textures = true

;Здесь ничего менять не надо
[include_files]
game.graph = true
gamemtl.xr = true
lanims.xr = true
particles.xr = true
senvironment.xr = true
shaders.xr = true
